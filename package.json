{
  "name": "next-base",
  "private": true,
  "quokka": {
    "babel": {
      "ts": true,
      "presets": [
        "react-app"
      ]
    },
    "plugins": [
      "jsdom-quokka-plugin"
    ]
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "npx prettier --write ./pages ./styles && next lint",
    "test": "jest --watchAll",
    "test:pre-commit": "jest",
    "coverage": "jest --coverage",
    "prepare": "husky install"
  },
  "dependencies": {
    "next": "12.0.9",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@babel/register": "^7.16.9",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@types/react": "^17.0.38",
    "autoprefixer": "^10.4.2",
    "babel-preset-react-app": "^10.0.1",
    "eslint": "^8.8.0",
    "eslint-config-next": "12.0.9",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^26.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.4.7",
    "jsdom-quokka-plugin": "^1.0.16",
    "postcss": "^8.4.5",
    "prettier": "2.5.1",
    "tailwindcss": "^3.0.18"
  }
}
